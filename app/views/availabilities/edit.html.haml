= content_for :page_title do
  Editing availability

= form_for [@playdate, @availability] do
  %p
    %label Speler
    %br
    = @player.full_name
  %p
    %label Datum
    %br
    = @playdate.day
  %p
    %label{:for => "availability_status"} Status
    %br
    = select 'availability', 'status', Availability::VALUES.map { |v| [Availability::LONG_DISPLAY[v], v] }

  = submit_tag 'Save'

= button_to 'Destroy', { :action => 'destroy', :id => @availability }, data: { :confirm => 'Are you sure you want to destroy this availability?' }

= link_to 'Back to list', playdate_path(@playdate)
