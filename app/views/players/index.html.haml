-content_for :page_title do
  Spelers

%table
  %tr
    %th Login
    %th Volledige naam
    %th Afkorting
    %th Admin?
    %th Standaardbeschikbaarheid
    %th
    %th

  -for player in @players
    %tr
      %td= h player.name
      %td= h player.full_name
      %td= h player.abbreviation
      %td= h player.is_admin
      %td= h status_display(player.default_status)
      %td.action
        = link_to 'Edit', edit_player_path(player)
      %td.action
        - unless player == @current_user
          = link_to 'Destroy', player, data: { :confirm => 'Are you sure?' }, :method => :delete

= will_paginate @players

= link_to 'New player', new_player_path
