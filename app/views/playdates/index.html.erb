<% content_for :page_title do %>
  Speeldagen
<% end %>

<table>
  <tr>
    <th>Datum</th>
    <th>Beschikbaar</th>
    <th></th>
    <th></th>
  </tr>

  <% @playdates.each do |playdate| %>
    <tr>
      <td><%= h playdate.day %></td>
      <td align="center"><%= h playdate.availabilities.length %></td>
      <td class="action">
        <%= link_to "Tonen", action: "show", id: playdate %>
      </td>
      <td class="action">
        <%= button_to("Verwijderen", { action: "destroy", id: playdate },
                      method: :delete,
                      form: { data: {
                        turbo_confirm: "Are you sure you want to destroy this playdate?"
                      } }) %>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate @playdates %>

<p>
<%= link_to "Nieuwe speeldag", action: "new" %>
<%= button_to("Opruimen", { action: "prune" },
              form: { data: {
                turbo_confirm: "Weet je zeker dat je oude speeldagen wilt opruimen?"
              } }) %>
</p>
